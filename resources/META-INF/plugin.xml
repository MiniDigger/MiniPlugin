<idea-plugin>
    <id>me.minidigger.miniplugin</id>
    <name>MiniPlugin</name>
    <version>1.0</version>
    <vendor email="admin@minidigger.me" url="http://www.minidigger.me">MiniDigger</vendor>

    <description><![CDATA[
      Small Plugin that makes my life easier
    ]]></description>

    <change-notes><![CDATA[
      No changes yet
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">

        <facetType implementation="me.minidigger.miniplugin.facet.VGLFacetType" />

        <!-- File templates are for project creations -->
        <fileTemplateGroup implementation="me.minidigger.miniplugin.util.VGLFileTemplateGroupFactory"/>

        <!-- Project View Node Decorators provide the project icons -->
        <projectViewNodeDecorator implementation="me.minidigger.miniplugin.platform.VGLProjectViewNodeDecorator"/>
        <deadCode implementation="me.minidigger.miniplugin.PlatformAnnotationEntryPoint"/>

        <!-- Application Configurable provides the VGL settings page -->
        <applicationConfigurable displayName="VGL Development"
                                 id="Settings.VGL"
                                 groupId="language"
                                 instance="me.minidigger.miniplugin.VGLSettings"/>

        <localInspection displayName="Missing JSR-305 Annotation"
                         groupName="MiniPlugin"
                         language="JAVA"
                         enabledByDefault="true"
                         level="ERROR"
                         hasStaticDescription="false"
                         implementationClass="me.minidigger.miniplugin.MissingJSR305Inspection"/>
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="_MiniPlugin" description="MiniPlugin">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="me.minidigger.miniplugin.TextBoxes"
                    text="Text _Boxes" description="A test menu item"/>
        </group>
    </actions>

</idea-plugin>